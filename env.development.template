# Development Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Application Environment
NODE_ENV=development

# Firebase Configuration (Backend)
FIREBASE_PROJECT_ID=your-dev-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-dev-firebase-client-email@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_DEV_FIREBASE_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# OpenAI Configuration
OPENAI_API_KEY=your-dev-openai-api-key

# Server Configuration
PORT=3000

# Frontend Environment Variables (Vite)
VITE_API_URL=http://localhost:3000/api
VITE_FIREBASE_API_KEY=your-dev-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-dev-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-dev-firebase-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-dev-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-dev-messaging-sender-id
VITE_FIREBASE_APP_ID=your-dev-firebase-app-id
VITE_FIREBASE_MEASUREMENT_ID=your-dev-measurement-id

# Development URLs
VITE_APP_URL=http://localhost:5173
VITE_BACKEND_URL=http://localhost:3000
