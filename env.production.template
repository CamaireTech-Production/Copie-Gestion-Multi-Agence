# Production Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Application Environment
NODE_ENV=production

# Firebase Configuration (Backend)
FIREBASE_PROJECT_ID=your-prod-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-prod-firebase-client-email@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PROD_FIREBASE_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# OpenAI Configuration
OPENAI_API_KEY=your-prod-openai-api-key

# Server Configuration
PORT=3000

# Frontend Environment Variables (Vite)
VITE_API_URL=https://yourdomain.com/api
VITE_FIREBASE_API_KEY=your-prod-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-prod-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-prod-firebase-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-prod-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-prod-messaging-sender-id
VITE_FIREBASE_APP_ID=your-prod-firebase-app-id
VITE_FIREBASE_MEASUREMENT_ID=your-prod-measurement-id

# Production URLs
VITE_APP_URL=https://yourdomain.com
VITE_BACKEND_URL=https://yourdomain.com
